import java.util.Random;

public class Main {
    public static void main(String[] args) {
        // Символьна змінна
        char c2;

        // Ціла змінна розміром 1 байт
        byte b;

        // Дійсна змінна розміром 4 байти
        float e = 123.45f; // Для прикладу даємо значення змінній 'e'

        // Ціла змінна розміром 4 байти з початковим значенням -500
        int i = -500;

        // Привласнюємо змінній i випадкове значення в діапазоні від 0 до 1000000
        Random rand = new Random();
        i = rand.nextInt(1000001); // Генеруємо число від 0 до 1000000
        System.out.println("Випадкове значення i: " + i);

        // Привласнюємо змінній i значення змінної e, округлене за правилами математики
        i = Math.round(e);
        System.out.println("Округлене значення e до i: " + i);

        // Привласнюємо змінній b значення змінної i
        // Це може спричинити втрату даних, тому потрібне явне приведення типів
        b = (byte) i;
        System.out.println("Значення b після присвоєння i: " + b);
    }
}
