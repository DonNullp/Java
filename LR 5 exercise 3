import java.util.Random;
import java.util.Scanner;

public class DiceSimulation {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        // Введення кількості кидків з клавіатури
        System.out.print("Введіть кількість кидків: ");
        int numberOfRolls = scanner.nextInt();

        // Масив для підрахунку кількості випадань кожного значення
        int[] diceCount = new int[6];

        // Імітація кидків
        for (int i = 0; i < numberOfRolls; i++) {
            int result = random.nextInt(6) + 1; // Генеруємо число від 1 до 6
            diceCount[result - 1]++; // Збільшуємо відповідний лічильник
        }

        // Виведення результатів
        System.out.println("Результати кидків:");
        for (int i = 0; i < 6; i++) {
            System.out.printf("Площина %d випала %d раз(и)\n", i + 1, diceCount[i]);
        }

        scanner.close();
    }
}
